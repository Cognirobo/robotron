<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <TextView
        android:text="@string/My_Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autoLink="web"
        android:id="@+id/textView2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Start_publisher"
        android:id="@+id/start_publisher"
        android:layout_marginTop="49dp"
        android:nestedScrollingEnabled="false"
        android:layout_below="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Speed_up"
        android:id="@+id/speed_up"
        android:layout_marginBottom="60dp"
        android:layout_above="@+id/stop_publisher"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Stop_publisher"
        android:id="@+id/stop_publisher"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="34dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Slow_down"
        android:id="@+id/slow_down"
        android:layout_alignBottom="@+id/speed_up"
        android:layout_toRightOf="@+id/stop_publisher"
        android:layout_toEndOf="@+id/stop_publisher" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Forward"
        android:id="@+id/go_forward"
        android:layout_below="@+id/start_publisher"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="56dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Backward"
        android:id="@+id/go_backward"
        android:layout_alignBottom="@+id/go_forward"
        android:layout_toRightOf="@+id/start_publisher"
        android:layout_toEndOf="@+id/start_publisher" />

</RelativeLayout>
